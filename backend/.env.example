# backend/.env.example (SAFE TO PUSH)

PORT=5000
MONGO_URI="mongodb+srv://<username>:<password>@cluster0.aogwual.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0"

# --- Budget Configuration ---
# Set to 100 for easy testing. You can set it back to 1000 later.
BUDGET_LIMIT=100

# --- Brevo (Email Service) Configuration ---
# This is the single key used for authentication by the Brevo SDK.
EMAIL_API_KEY="REPLACE_THIS_WITH_YOUR_LIVE_BREVO_API_KEY"

# This is the sender email (must be verified in Brevo).
EMAIL_SENDER="your.sender@example.com"

# This is the recipient email (your alert inbox).
BUDGET_ALERT_RECIPIENT="recipient@example.com"